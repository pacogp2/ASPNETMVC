
@{
    ViewBag.Title = "Borrar";
}

<h2>Empleado</h2>

<div>
@if (!@ViewBag.respuesta.OK)
        {
            <script>alert("Error = @ViewBag.respuesta.mensaje");</script>
            <h2>Error generado: @ViewBag.respuesta.mensaje</h2>
        }
        else
        {
            <dl class="dl-horizontal">
                <dt>Error de catch:</dt>           
                <dd>@ViewBag.respuesta.mensaje</dd>
                <dt>Resultado:</dt>
                @if(@ViewBag.respuesta.datos = -1)
                {
                    <dd>El resultado del borrado ha sido : @ViewBag.respuesta.datos</dd>
                }
            </dl>
        }
</div>
<p>
    @Html.ActionLink("Listar los empleados", "Lista")
</p>

